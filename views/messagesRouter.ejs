<html>
    <head>
        <title>Main page</title>
        <link rel="stylesheet" href="/styles.css"/>
    </head>
    <body>

            <%- include ("navbar")%>
            <ul class="container">
                <% if(messages){%>
                    <% messages.map((message, index) => {%>
                        <li class="info-card">
                            <a href="/<%= message.id %>">
                                <%= message.text%>
                                <%= message.username%>
                                <%= message.added%>
                            </a>
                        </li>
                    <%})%>
                <%}%>
                
            </ul>

        <%- include("footer")%>
    </body>
</html>

