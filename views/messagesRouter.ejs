<html>
    <head>
        <title>Main page</title>
        <link rel="stylesheet" href="/styles.css"/>
    </head>
    <body>

            <%- include ("navbar")%>
            <ul class="container">
                <% messages.map((message, index) => {%>
                    <li class="info-card">
                        <a href="/<%= index %>">
