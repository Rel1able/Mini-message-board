<html>
    <head>
        <title>Main page</title>
        <link rel="stylesheet" href="/styles.css"/>
    </head>
    <body>
    <a href="/new">Add new message</a>
    <ul>
    <% messages.map((message, index) => {%>
        <li>
            <a href="/<%= index %>">
                <%= message.text%>
                <%= message.user%>
                <%= message.added%>
            </a>
        </li>
    <%})%>
</ul>
</body>
</html>

